# AI Answer Ninja Development Environment Configuration
# ===========================================
# 应用基础配置
# ===========================================
NODE_ENV=development
LOG_LEVEL=debug

# ===========================================
# 数据库配置
# ===========================================
POSTGRES_PASSWORD=dev_postgres_password_2024
REDIS_PASSWORD=dev_redis_password_2024

# 开发环境管理工具密码
PGADMIN_PASSWORD=admin123

# ===========================================
# Azure服务配置 (开发环境占位符)
# ===========================================

# Azure Communication Services (需要实际配置)
AZURE_COMMUNICATION_CONNECTION_STRING=endpoint=https://dev-communication-service.communication.azure.com/;accesskey=dev_access_key

# Azure Speech Services (需要实际配置)
AZURE_SPEECH_KEY=dev_azure_speech_key
AZURE_SPEECH_REGION=eastasia

# Azure OpenAI (需要实际配置)
AZURE_OPENAI_KEY=dev_azure_openai_key  
AZURE_OPENAI_ENDPOINT=https://dev-openai-resource.openai.azure.com/

# Azure Text Analytics (需要实际配置)
AZURE_TEXT_ANALYTICS_KEY=dev_text_analytics_key
AZURE_TEXT_ANALYTICS_ENDPOINT=https://dev-text-analytics.cognitiveservices.azure.com/

# Azure Storage (需要实际配置)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=dev_storage;AccountKey=dev_storage_key;EndpointSuffix=core.windows.net

# ===========================================
# 安全配置
# ===========================================

# JWT Configuration
JWT_SECRET=development_jwt_secret_key_32_characters_long_for_dev_only
JWT_EXPIRES_IN=1h

# Encryption Keys (开发环境专用)
ENCRYPTION_KEY=dev_encryption_key_32_chars_long
AUDIO_ENCRYPTION_KEY=dev_audio_encryption_key_32_chars

# ===========================================
# 邮件服务配置 (开发环境)
# ===========================================
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=dev@localhost
SMTP_PASS=dev_password

# ===========================================
# 监控和告警配置
# ===========================================

# Webhook for alerts (开发环境)
ALERT_WEBHOOK_URL=http://localhost:8080/webhooks/alerts

# External monitoring services
ELASTICSEARCH_HOSTS=http://elasticsearch:9200

# ===========================================
# 性能调优配置
# ===========================================

# Redis配置
REDIS_MAX_MEMORY=256mb
REDIS_MAX_CONNECTIONS=100

# PostgreSQL配置
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB

# ===========================================
# 功能开关 (Feature Flags)
# ===========================================
ENABLE_VOICE_CLONING=false
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_ML_PREDICTIONS=false
ENABLE_DEBUG_LOGGING=true

# ===========================================
# 限流和配额配置
# ===========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
DAILY_CALL_LIMIT=1000
MONTHLY_MINUTES_LIMIT=60000

# ===========================================
# 文件上传配置
# ===========================================
MAX_AUDIO_FILE_SIZE=50MB
MAX_UPLOAD_FILES=10
ALLOWED_AUDIO_FORMATS=wav,mp3,aac,opus

# ===========================================
# 开发环境特定配置
# ===========================================

# 热重载配置
ENABLE_HOT_RELOAD=true
WATCH_FILE_EXTENSIONS=js,ts,json

# 调试配置
DEBUG=ai-ninja:*
ENABLE_REQUEST_LOGGING=true
ENABLE_SQL_LOGGING=true

# 缓存配置
CACHE_TTL_DEFAULT=3600
CACHE_TTL_USER_PROFILE=1800
CACHE_TTL_WHITELIST=600