{
  "name": "@ai-ninja/test-suite",
  "version": "1.0.0",
  "description": "Comprehensive test suite for AI Phone Answering System",
  "main": "test-runner.ts",
  "scripts": {
    "test": "ts-node test-runner.ts run",
    "test:unit": "jest --testPathPattern=unit --coverage --maxWorkers=50%",
    "test:integration": "jest --testPathPattern=integration --coverage --runInBand",
    "test:e2e": "jest --testPathPattern=e2e --runInBand --detectOpenHandles",
    "test:load": "ts-node load/load-test-runner.ts",
    "test:api": "jest --testPathPattern=integration/api-integration-tests.ts",
    "test:websocket": "jest --testPathPattern=integration/websocket-integration-tests.ts",
    "test:database": "jest --testPathPattern=integration/database-integration-tests.ts",
    "fixtures:list": "ts-node test-runner.ts fixtures --list",
    "fixtures:generate": "ts-node test-runner.ts fixtures --generate",
    "fixtures:cleanup": "ts-node test-runner.ts fixtures --cleanup",
    "env:status": "ts-node test-runner.ts status",
    "env:reset": "npm run fixtures:cleanup && npm run fixtures:generate basic-user-data",
    "data:generate": "ts-node data/test-data-manager.ts generate",
    "data:seed": "ts-node data/test-data-manager.ts seed",
    "data:clear": "ts-node data/test-data-manager.ts clear",
    "mocks:start": "ts-node mocks/start-mock-services.ts",
    "mocks:stop": "ts-node mocks/stop-mock-services.ts",
    "mocks:reset": "ts-node mocks/reset-mock-services.ts",
    "build": "tsc",
    "lint": "eslint **/*.ts",
    "format": "prettier --write **/*.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^8.3.1",
    "axios": "^1.11.0",
    "commander": "^11.1.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/test-results/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "testTimeout": 30000,
    "globalSetup": "<rootDir>/jest.global-setup.ts",
    "globalTeardown": "<rootDir>/jest.global-teardown.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-ninja/ai-answer-ninja.git",
    "directory": "tests"
  },
  "keywords": [
    "testing",
    "integration-testing",
    "load-testing",
    "fixtures",
    "mocks",
    "ai",
    "phone-system"
  ],
  "author": "AI Ninja Team",
  "license": "MIT"
}
