# Production Database Secrets Template
# Copy this to database.env and replace with actual production credentials
# NEVER commit actual production secrets to version control

DB_USERNAME=ai_ninja_prod
DB_PASSWORD=REPLACE_WITH_PRODUCTION_PASSWORD_STRONG
DB_ROOT_PASSWORD=REPLACE_WITH_PRODUCTION_ROOT_PASSWORD_STRONG

# Connection strings with SSL
DATABASE_URL=postgresql://ai_ninja_prod:REPLACE_WITH_PRODUCTION_PASSWORD_STRONG@postgresql-production.internal:5432/ai_ninja_production?sslmode=require
DATABASE_READ_REPLICA_URL=postgresql://ai_ninja_prod:REPLACE_WITH_PRODUCTION_PASSWORD_STRONG@postgresql-prod-replica.internal:5432/ai_ninja_production?sslmode=require

# Database admin credentials
DB_ADMIN_USERNAME=postgres
DB_ADMIN_PASSWORD=REPLACE_WITH_PRODUCTION_ROOT_PASSWORD_STRONG

# Backup credentials
DB_BACKUP_ACCESS_KEY=REPLACE_WITH_PROD_BACKUP_ACCESS_KEY
DB_BACKUP_SECRET_KEY=REPLACE_WITH_PROD_BACKUP_SECRET_KEY
DB_BACKUP_ENCRYPTION_KEY=REPLACE_WITH_BACKUP_ENCRYPTION_KEY

# Database monitoring credentials
DB_MONITOR_USERNAME=db_monitor
DB_MONITOR_PASSWORD=REPLACE_WITH_DB_MONITOR_PASSWORD

# Replication credentials
DB_REPLICATION_USERNAME=replicator
DB_REPLICATION_PASSWORD=REPLACE_WITH_REPLICATION_PASSWORD