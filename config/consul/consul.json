{
  "datacenter": "dc1",
  "data_dir": "/consul/data",
  "log_level": "INFO",
  "server": true,
  "bootstrap_expect": 1,
  "ui_config": {
    "enabled": true
  },
  "client_addr": "0.0.0.0",
  "bind_addr": "0.0.0.0",
  "ports": {
    "grpc": 8502
  },
  "connect": {
    "enabled": true
  },
  "services": [
    {
      "name": "phone-gateway",
      "port": 3001,
      "tags": ["api", "core", "phone"],
      "check": {
        "http": "http://phone-gateway:3001/health",
        "interval": "10s",
        "timeout": "3s"
      }
    },
    {
      "name": "realtime-processor",
      "port": 3002,
      "tags": ["api", "core", "realtime", "critical"],
      "check": {
        "http": "http://realtime-processor:3002/health",
        "interval": "5s",
        "timeout": "2s"
      }
    },
    {
      "name": "conversation-engine",
      "port": 3003,
      "tags": ["api", "core", "ai"],
      "check": {
        "http": "http://conversation-engine:3003/health",
        "interval": "10s",
        "timeout": "3s"
      }
    },
    {
      "name": "profile-analytics",
      "port": 3004,
      "tags": ["api", "core", "analytics"],
      "check": {
        "http": "http://profile-analytics:3004/health",
        "interval": "15s",
        "timeout": "5s"
      }
    },
    {
      "name": "user-management",
      "port": 3005,
      "tags": ["api", "support", "auth"],
      "check": {
        "http": "http://user-management:3005/health",
        "interval": "10s",
        "timeout": "3s"
      }
    },
    {
      "name": "smart-whitelist",
      "port": 3006,
      "tags": ["api", "support", "filtering"],
      "check": {
        "http": "http://smart-whitelist:3006/health",
        "interval": "10s",
        "timeout": "3s"
      }
    },
    {
      "name": "configuration",
      "port": 3007,
      "tags": ["api", "platform", "config"],
      "check": {
        "http": "http://configuration:3007/health",
        "interval": "30s",
        "timeout": "5s"
      }
    },
    {
      "name": "storage",
      "port": 3008,
      "tags": ["api", "platform", "storage"],
      "check": {
        "http": "http://storage:3008/health",
        "interval": "15s",
        "timeout": "5s"
      }
    },
    {
      "name": "monitoring",
      "port": 3009,
      "tags": ["api", "platform", "monitoring"],
      "check": {
        "http": "http://monitoring:3009/health",
        "interval": "30s",
        "timeout": "5s"
      }
    }
  ]
}