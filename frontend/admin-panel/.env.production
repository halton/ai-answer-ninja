# AI Answer Ninja Admin Panel - Production Configuration
# 生产环境配置文件

# 应用基础配置
VITE_APP_NAME=AI Answer Ninja Admin
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI电话应答系统管理面板

# API 配置
VITE_API_BASE_URL=https://api.ai-ninja.com
VITE_WEBSOCKET_URL=wss://ws.ai-ninja.com
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000

# 认证配置
VITE_AUTH_STORAGE_KEY=ai_ninja_auth_token
VITE_REFRESH_TOKEN_KEY=ai_ninja_refresh_token
VITE_SESSION_TIMEOUT=3600000

# 功能开关
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_DEBUG_MODE=false

# CDN 配置 (可选)
VITE_USE_CDN=false
VITE_CDN_BASE_URL=https://cdn.ai-ninja.com

# 第三方服务配置
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_HOTJAR_ID=1234567

# 业务配置
VITE_DEFAULT_LANGUAGE=zh-CN
VITE_DEFAULT_TIMEZONE=Asia/Shanghai
VITE_MAX_FILE_UPLOAD_SIZE=10485760
VITE_SUPPORTED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.xls,.xlsx

# 安全配置
VITE_ENABLE_HTTPS=true
VITE_CSRF_TOKEN_HEADER=X-CSRF-Token
VITE_CORS_WHITELIST=https://admin.ai-ninja.com,https://api.ai-ninja.com

# 性能配置
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_DURATION=86400000
VITE_API_CACHE_DURATION=300000
VITE_LAZY_LOAD_THRESHOLD=100

# 监控配置
VITE_LOG_LEVEL=warn
VITE_ENABLE_CONSOLE_LOGS=false
VITE_METRICS_ENDPOINT=https://metrics.ai-ninja.com

# 构建配置
VITE_BUILD_TIME=__BUILD_TIME__
VITE_BUILD_VERSION=__BUILD_VERSION__
VITE_SOURCE_MAP=false