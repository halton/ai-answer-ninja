{
  "name": "monitoring-service",
  "version": "1.0.0",
  "description": "Comprehensive monitoring and alerting service for AI Answer Ninja",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/server.ts",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": ["monitoring", "alerting", "prometheus", "grafana", "observability"],
  "author": "AI Answer Ninja Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-prometheus-middleware": "^1.2.0",
    "prom-client": "^14.2.0",
    "node-cron": "^3.0.2",
    "winston": "^3.8.2",
    "redis": "^4.6.4",
    "pg": "^8.9.0",
    "axios": "^1.3.4",
    "lodash": "^4.17.21",
    "uuid": "^9.0.0",
    "helmet": "^6.0.1",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "joi": "^17.8.3",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.9.1",
    "slack-webhook": "^2.0.3",
    "twilio": "^4.7.2",
    "opentelemetry-sdk-node": "^0.35.0",
    "@opentelemetry/exporter-jaeger": "^1.9.1",
    "@opentelemetry/instrumentation-http": "^0.35.1",
    "@opentelemetry/instrumentation-express": "^0.32.1",
    "elastic-apm-node": "^3.45.0"
  },
  "devDependencies": {
    "@types/node": "^18.14.6",
    "@types/express": "^4.17.17",
    "@types/lodash": "^4.14.191",
    "@types/uuid": "^9.0.1",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/joi": "^17.2.3",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/nodemailer": "^6.4.7",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "jest": "^29.4.3",
    "@types/jest": "^29.4.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**/*"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ]
  }
}