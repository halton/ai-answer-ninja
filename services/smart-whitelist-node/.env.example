# Smart Whitelist Service Environment Configuration

# Server Configuration
PORT=3006
HOST=0.0.0.0
NODE_ENV=development
SERVICE_NAME=smart-whitelist
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_ninja
DB_USERNAME=postgres
DB_PASSWORD=your-password
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=5
REDIS_TTL=3600
REDIS_KEY_PREFIX=smart_whitelist

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Whitelist Management
DEFAULT_WHITELIST_STRATEGY=moderate
AUTO_LEARNING_ENABLED=true
LEARNING_CONFIDENCE_THRESHOLD=0.8
PATTERN_DETECTION_ENABLED=true
RISK_EVALUATION_ENABLED=true

# Machine Learning Configuration
ML_MODEL_ENDPOINT=http://localhost:8001
ML_MODEL_API_KEY=your-ml-api-key
ENABLE_REAL_TIME_CLASSIFICATION=true
MODEL_UPDATE_FREQUENCY=daily
TRAINING_DATA_BATCH_SIZE=1000
MIN_SAMPLES_FOR_LEARNING=100

# Risk Assessment
RISK_SCORING_ENABLED=true
HIGH_RISK_THRESHOLD=0.8
MEDIUM_RISK_THRESHOLD=0.5
ENABLE_ADAPTIVE_THRESHOLDS=true
BEHAVIORAL_ANALYSIS_ENABLED=true

# Import/Export Configuration
ENABLE_BULK_OPERATIONS=true
MAX_IMPORT_SIZE=10000
EXPORT_FORMATS=json,csv,xlsx
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *

# External Services
PHONE_GATEWAY_URL=http://localhost:3001
USER_MANAGEMENT_URL=http://localhost:3005
PROFILE_ANALYTICS_URL=http://localhost:3004
MONITORING_SERVICE_URL=http://localhost:3009

# Spam Detection
ENABLE_SPAM_DETECTION=true
SPAM_CONFIDENCE_THRESHOLD=0.7
SPAM_DATABASE_ENABLED=true
COMMUNITY_REPORTING_ENABLED=true
THIRD_PARTY_SPAM_APIS=truecaller,hiya

# Adaptive Learning
ENABLE_USER_BEHAVIOR_LEARNING=true
LEARNING_WINDOW_DAYS=30
FEEDBACK_WEIGHT=0.3
AUTOMATIC_RULE_GENERATION=true
RULE_CONFIDENCE_THRESHOLD=0.9

# Whitelist Rules
ENABLE_TIME_BASED_RULES=true
ENABLE_FREQUENCY_RULES=true
ENABLE_LOCATION_RULES=false
ENABLE_PATTERN_RULES=true
MAX_CUSTOM_RULES_PER_USER=50

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL=1800
ENABLE_BATCH_PROCESSING=true
BATCH_SIZE=500
PARALLEL_PROCESSING_ENABLED=true

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_DECISION_LOGGING=true
METRICS_ENABLED=true
METRICS_PORT=9094

# Development/Debug
DEBUG_MODE=false
DEBUG_CLASSIFICATION=false
DEBUG_LEARNING=false
SAVE_DEBUG_DATA=false
DEBUG_DATA_PATH=./debug/whitelist