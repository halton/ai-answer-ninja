# Azure Speech Services Configuration
AZURE_SPEECH_KEY=your_speech_key_here
AZURE_SPEECH_REGION=eastasia
AZURE_SPEECH_ENDPOINT=https://eastasia.api.cognitive.microsoft.com/

# Azure Custom Neural Voice
AZURE_CUSTOM_VOICE_ENDPOINT=https://eastasia.voice.speech.microsoft.com/
AZURE_CUSTOM_VOICE_PROJECT_ID=your_project_id
AZURE_CUSTOM_VOICE_DEPLOYMENT_ID=your_deployment_id

# Azure Storage (for audio files)
AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string
AZURE_STORAGE_CONTAINER_NAME=audio-recordings

# Service Configuration
SERVICE_PORT=3010
SERVICE_NAME=speech-services
NODE_ENV=development

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# WebSocket Configuration
WS_PORT=3011
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Performance Settings
MAX_CONCURRENT_STT=10
MAX_CONCURRENT_TTS=10
AUDIO_BUFFER_SIZE=4096
STREAM_CHUNK_SIZE=1024

# Cache Settings
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
PREGENERATED_RESPONSES_ENABLED=true

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=3012
LOG_LEVEL=info

# Audio Processing
SAMPLE_RATE=16000
AUDIO_FORMAT=wav
AUDIO_CHANNELS=1
AUDIO_BIT_DEPTH=16

# Latency Targets (milliseconds)
TARGET_STT_LATENCY=350
TARGET_TTS_LATENCY=300
TARGET_TOTAL_LATENCY=1500