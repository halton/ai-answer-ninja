# User Management Service Environment Configuration

# Server Configuration
PORT=3005
HOST=0.0.0.0
NODE_ENV=development
SERVICE_NAME=user-management
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_ninja
DB_USERNAME=postgres
DB_PASSWORD=your-password
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=4
REDIS_SESSION_TTL=86400
REDIS_CACHE_TTL=3600

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10
AUTH_RATE_LIMIT_WINDOW_MS=900000

# Multi-Factor Authentication
MFA_ENABLED=true
MFA_ISSUER=AI-Answer-Ninja
MFA_WINDOW=1
EMAIL_MFA_ENABLED=true
SMS_MFA_ENABLED=false

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@ai-answer-ninja.com

# SMS Configuration (Optional)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_MAX_AGE_DAYS=90
PASSWORD_HISTORY_COUNT=5

# Account Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900000
ENABLE_DEVICE_TRACKING=true
SUSPICIOUS_ACTIVITY_DETECTION=true
ENABLE_GEOLOCATION_VALIDATION=false

# Session Management
SESSION_TIMEOUT=3600000
CONCURRENT_SESSIONS_LIMIT=3
ENABLE_SESSION_ROTATION=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true

# External Services
PHONE_GATEWAY_URL=http://localhost:3001
PROFILE_ANALYTICS_URL=http://localhost:3004
SMART_WHITELIST_URL=http://localhost:3006
MONITORING_SERVICE_URL=http://localhost:3009

# Role-Based Access Control
ENABLE_RBAC=true
DEFAULT_USER_ROLE=user
ADMIN_REGISTRATION_ENABLED=false
USER_REGISTRATION_ENABLED=true
EMAIL_VERIFICATION_REQUIRED=true

# Audit and Compliance
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365
ENABLE_GDPR_COMPLIANCE=true
DATA_EXPORT_ENABLED=true
DATA_DELETION_ENABLED=true

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9093
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_SECURITY_LOGGING=true

# Development/Debug
DEBUG_MODE=false
DEBUG_AUTH=false
DEBUG_SESSIONS=false
ENABLE_TEST_USERS=false