# AI Answer Ninja - User Management Service
# Environment Configuration Template

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
PORT=3005
APP_URL=http://localhost:3000

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
DATABASE_URL="postgresql://username:password@localhost:5432/ai_answer_ninja_user_mgmt?schema=public"
DB_POOL_SIZE=10
DB_TIMEOUT=30000

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL="redis://localhost:6379"
REDIS_KEY_PREFIX="ai-ninja:user-mgmt:"
REDIS_TTL=3600

# ===========================================
# JWT Configuration
# ===========================================
JWT_ACCESS_SECRET="your-super-secret-jwt-access-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-jwt-refresh-key-change-this-in-production"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"
JWT_ISSUER="ai-answer-ninja"
JWT_AUDIENCE="ai-answer-ninja-users"

# ===========================================
# Email Configuration (SMTP)
# ===========================================
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="noreply@ai-answer-ninja.com"

# ===========================================
# Security Configuration
# ===========================================
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
SESSION_TIMEOUT=3600000
MFA_WINDOW_SIZE=2
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true

# ===========================================
# Rate Limiting Configuration
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESS=false
RATE_LIMIT_SKIP_FAILED=false

# ===========================================
# Feature Flags
# ===========================================
FEATURE_MFA_ENABLED=true
FEATURE_EMAIL_VERIFICATION_REQUIRED=false
FEATURE_AUDIT_LOGGING_ENABLED=true
FEATURE_ADVANCED_SECURITY_ENABLED=true
FEATURE_USER_REGISTRATION_ENABLED=true

# ===========================================
# Service URLs (for inter-service communication)
# ===========================================
PHONE_GATEWAY_URL="http://localhost:3001"
REALTIME_PROCESSOR_URL="http://localhost:3002"
CONVERSATION_ENGINE_URL="http://localhost:3003"
PROFILE_ANALYTICS_URL="http://localhost:3004"

# ===========================================
# CORS Configuration
# ===========================================
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001,https://your-domain.com"

# ===========================================
# Monitoring and Logging
# ===========================================
LOG_LEVEL="info"
LOG_FILE="logs/user-management.log"
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=true

# ===========================================
# External Service Keys (Optional)
# ===========================================
# SMS Service (Twilio, etc.)
SMS_SERVICE_SID=""
SMS_SERVICE_TOKEN=""
SMS_FROM_NUMBER=""

# Push Notification Service
PUSH_NOTIFICATION_KEY=""

# IP Geolocation Service
GEOLOCATION_API_KEY=""

# ===========================================
# Development Only
# ===========================================
# Set to true to enable debug logging
DEBUG=false

# Set to true to disable authentication (DEVELOPMENT ONLY!)
DISABLE_AUTH=false

# Set to true to enable API response mocking
ENABLE_MOCKING=false