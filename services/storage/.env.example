# Storage Service Environment Configuration

# Server Configuration
PORT=3008
HOST=0.0.0.0
NODE_ENV=development
SERVICE_NAME=storage-service
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=300000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_ninja
DB_USERNAME=postgres
DB_PASSWORD=your-password
DB_SSL=false
DB_MAX_CONNECTIONS=15
DB_CONNECTION_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=7
REDIS_TTL=3600
REDIS_KEY_PREFIX=storage_service

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_BLOB_CONTAINER_AUDIO=audio-files
AZURE_BLOB_CONTAINER_TRANSCRIPTS=transcripts
AZURE_BLOB_CONTAINER_EXPORTS=exports
AZURE_BLOB_CONTAINER_BACKUPS=backups

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200

# File Upload Configuration
MAX_FILE_SIZE=100MB
ALLOWED_AUDIO_FORMATS=wav,mp3,m4a,aac,ogg
ALLOWED_DOCUMENT_FORMATS=pdf,txt,docx
UPLOAD_TIMEOUT=300000
ENABLE_VIRUS_SCANNING=false

# Audio Processing
ENABLE_AUDIO_COMPRESSION=true
AUDIO_COMPRESSION_QUALITY=medium
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
ENABLE_AUDIO_TRANSCODING=true

# File Management
ENABLE_FILE_VERSIONING=true
MAX_FILE_VERSIONS=5
ENABLE_SOFT_DELETE=true
SOFT_DELETE_RETENTION_DAYS=30
ENABLE_AUTO_CLEANUP=true

# Data Archival
ENABLE_AUTOMATIC_ARCHIVAL=true
ARCHIVE_AFTER_DAYS=90
ARCHIVE_STORAGE_TIER=cool
ENABLE_DEEP_ARCHIVE=true
DEEP_ARCHIVE_AFTER_DAYS=365

# Backup Configuration
ENABLE_BACKUP=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
INCREMENTAL_BACKUP_ENABLED=true
BACKUP_COMPRESSION_ENABLED=true

# Encryption
ENABLE_ENCRYPTION_AT_REST=true
ENABLE_ENCRYPTION_IN_TRANSIT=true
ENCRYPTION_ALGORITHM=AES256
KEY_ROTATION_ENABLED=true
KEY_ROTATION_INTERVAL_DAYS=90

# Content Delivery
ENABLE_CDN=false
CDN_ENDPOINT=your-cdn-endpoint.com
ENABLE_CACHING=true
CACHE_TTL=3600
ENABLE_COMPRESSION=true

# External Services
USER_MANAGEMENT_URL=http://localhost:3005
MONITORING_SERVICE_URL=http://localhost:3009

# Performance Configuration
ENABLE_PARALLEL_UPLOADS=true
MAX_CONCURRENT_UPLOADS=5
CHUNK_SIZE=4MB
ENABLE_RESUME_UPLOAD=true

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_FILE_ACCESS_LOGGING=true
METRICS_ENABLED=true
METRICS_PORT=9096

# Development/Debug
DEBUG_MODE=false
DEBUG_UPLOADS=false
DEBUG_AZURE_STORAGE=false
ENABLE_LOCAL_STORAGE_FALLBACK=true
LOCAL_STORAGE_PATH=./uploads