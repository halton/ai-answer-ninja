# Environment Configuration for Profile Analytics Service

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=3004

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ai_answer_ninja
DATABASE_POOL_SIZE=10
DATABASE_POOL_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PREFIX=profile_analytics:
CACHE_TTL=3600

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Machine Learning Settings
ML_MODEL_PATH=./ml/models
ML_MODEL_UPDATE_INTERVAL=3600
FEATURE_STORE_PATH=./ml/features

# Azure Cognitive Services (Optional)
AZURE_COGNITIVE_KEY=your_azure_cognitive_key_here
AZURE_COGNITIVE_ENDPOINT=https://your-region.cognitiveservices.azure.com/
AZURE_COGNITIVE_REGION=eastus2

# Service Discovery and Communication
SERVICE_REGISTRY_URL=http://localhost:8500
USER_MANAGEMENT_URL=http://localhost:3005
SMART_WHITELIST_URL=http://localhost:3006
CONVERSATION_ENGINE_URL=http://localhost:3003

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Feature Flags
ENABLE_REAL_TIME_PROFILING=true
ENABLE_BATCH_LEARNING=true
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_NLP_FEATURES=true

# Security Settings
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Data Retention Policies (in days)
PROFILE_DATA_RETENTION_DAYS=365
CALL_DATA_RETENTION_DAYS=90
ANALYTICS_DATA_RETENTION_DAYS=730

# Batch Processing Settings
BATCH_SIZE=1000
BATCH_PROCESSING_INTERVAL=300

# Monitoring Settings
PROMETHEUS_METRICS_PATH=/metrics
HEALTH_CHECK_TIMEOUT=30