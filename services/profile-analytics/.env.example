# Profile Analytics Service Environment Configuration

# Server Configuration
PORT=3004
HOST=0.0.0.0
NODE_ENV=development
SERVICE_NAME=profile-analytics
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_ninja
DB_USERNAME=postgres
DB_PASSWORD=your-password
DB_SSL=false
DB_MAX_CONNECTIONS=25
DB_CONNECTION_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=3
REDIS_TTL=3600
REDIS_KEY_PREFIX=profile_analytics

# Azure Configuration
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastus2
AZURE_TEXT_ANALYTICS_KEY=your-text-analytics-key
AZURE_TEXT_ANALYTICS_ENDPOINT=https://your-text-analytics.cognitiveservices.azure.com/
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=analytics-data

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200

# Analytics Configuration
ENABLE_REAL_TIME_ANALYSIS=true
ENABLE_CACHING=true
CACHE_TTL=1800
ANALYSIS_BATCH_SIZE=100
MAX_ANALYSIS_DEPTH=5
ENABLE_PATTERN_DETECTION=true
PATTERN_CONFIDENCE_THRESHOLD=0.8

# Machine Learning Configuration
ML_MODEL_ENDPOINT=http://localhost:8000
ML_MODEL_API_KEY=your-ml-api-key
ENABLE_AUTO_TRAINING=true
MODEL_UPDATE_INTERVAL=86400000
TRAINING_DATA_RETENTION_DAYS=90
MIN_TRAINING_SAMPLES=1000

# Profile Analysis
PROFILE_UPDATE_INTERVAL=300000
ENABLE_BEHAVIOR_ANALYSIS=true
BEHAVIOR_WINDOW_HOURS=24
ANOMALY_DETECTION_THRESHOLD=0.9
RISK_SCORING_ENABLED=true

# Report Generation
ENABLE_AUTOMATED_REPORTS=true
REPORT_GENERATION_SCHEDULE=0 0 * * *
DEFAULT_REPORT_FORMAT=json
REPORT_RETENTION_DAYS=365
ENABLE_EXPORT_FORMATS=true

# Performance Monitoring
METRICS_ENABLED=true
METRICS_PORT=9092
PERFORMANCE_TRACKING_ENABLED=true
SLOW_QUERY_THRESHOLD=5000
MEMORY_USAGE_ALERT_THRESHOLD=80

# External Services
PHONE_GATEWAY_URL=http://localhost:3001
REALTIME_PROCESSOR_URL=http://localhost:3002
CONVERSATION_ENGINE_URL=http://localhost:3003
USER_MANAGEMENT_URL=http://localhost:3005
SMART_WHITELIST_URL=http://localhost:3006
MONITORING_SERVICE_URL=http://localhost:3009

# Data Processing
BATCH_PROCESSING_ENABLED=true
BATCH_SIZE=1000
PROCESSING_THREADS=4
QUEUE_MAX_SIZE=10000
ENABLE_PARALLEL_PROCESSING=true

# Privacy and Compliance
ENABLE_DATA_ANONYMIZATION=true
PII_DETECTION_ENABLED=true
DATA_RETENTION_DAYS=730
GDPR_COMPLIANCE_MODE=true
AUDIT_LOG_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true
LOG_RETENTION_DAYS=30
STRUCTURED_LOGGING=true

# Development/Debug
DEBUG_MODE=false
DEBUG_ANALYTICS=false
DEBUG_ML_PROCESSING=false
SAVE_DEBUG_DATA=false
DEBUG_DATA_PATH=./debug/analytics