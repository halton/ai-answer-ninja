# Phone Gateway Service Environment Configuration

# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30000

# Azure Communication Services
AZURE_COMMUNICATION_CONNECTION_STRING=endpoint=https://your-resource.communication.azure.com/;accesskey=your-access-key
AZURE_COMMUNICATION_ENDPOINT=https://your-resource.communication.azure.com/
AZURE_COMMUNICATION_RESOURCE_ID=your-resource-id
AZURE_WEBHOOK_SECRET=your-webhook-secret

# Azure Event Grid
AZURE_EVENT_GRID_ENDPOINT=https://your-topic.region.eventgrid.azure.net/api/events
AZURE_EVENT_GRID_ACCESS_KEY=your-access-key
AZURE_EVENT_GRID_TOPIC_NAME=phone-gateway-events

# Azure Storage (Optional)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_ACCOUNT_NAME=your-account
AZURE_STORAGE_ACCOUNT_KEY=your-key
AZURE_STORAGE_RECORDING_CONTAINER=call-recordings
AZURE_STORAGE_TRANSCRIPTION_CONTAINER=call-transcriptions

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_ninja
DB_USERNAME=postgres
DB_PASSWORD=your-password
DB_SSL=false
DB_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Service URLs
REALTIME_PROCESSOR_URL=http://localhost:3002
REALTIME_PROCESSOR_TIMEOUT=5000
SMART_WHITELIST_URL=http://localhost:3006
SMART_WHITELIST_TIMEOUT=3000
USER_MANAGEMENT_URL=http://localhost:3005
USER_MANAGEMENT_TIMEOUT=3000
PROFILE_ANALYTICS_URL=http://localhost:3004
PROFILE_ANALYTICS_TIMEOUT=3000

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
LOG_LEVEL=info

# Performance Configuration
COMPRESSION_ENABLED=true
CACHE_ENABLED=true
CACHE_TTL=300

# Public URL for webhooks
PUBLIC_URL=https://your-domain.com