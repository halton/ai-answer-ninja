# Monitoring Service Environment Configuration

# Server Configuration
PORT=3009
HOST=0.0.0.0
NODE_ENV=development
SERVICE_NAME=monitoring-service
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_ninja
DB_USERNAME=postgres
DB_PASSWORD=your-password
DB_SSL=false
DB_MAX_CONNECTIONS=15
DB_CONNECTION_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=8
REDIS_TTL=3600
REDIS_KEY_PREFIX=monitoring

# Time Series Database (InfluxDB)
INFLUXDB_HOST=localhost
INFLUXDB_PORT=8086
INFLUXDB_DATABASE=ai_ninja_metrics
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=your-influx-password
INFLUXDB_RETENTION_POLICY=default

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Metrics Collection
METRICS_COLLECTION_INTERVAL=30000
ENABLE_SYSTEM_METRICS=true
ENABLE_APPLICATION_METRICS=true
ENABLE_BUSINESS_METRICS=true
ENABLE_CUSTOM_METRICS=true

# Prometheus Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics
PROMETHEUS_PUSHGATEWAY_URL=http://localhost:9091

# Grafana Integration
GRAFANA_ENABLED=true
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your-grafana-api-key
GRAFANA_ORG_ID=1
AUTO_CREATE_DASHBOARDS=true

# Alerting Configuration
ALERTING_ENABLED=true
ALERT_CHECK_INTERVAL=60000
ENABLE_EMAIL_ALERTS=true
ENABLE_SLACK_ALERTS=false
ENABLE_WEBHOOK_ALERTS=true
ENABLE_SMS_ALERTS=false

# Email Alerting
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
ALERT_EMAIL_FROM=alerts@ai-answer-ninja.com
ALERT_EMAIL_TO=admin@ai-answer-ninja.com

# Slack Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SLACK_CHANNEL=#alerts
SLACK_USERNAME=AI-Ninja-Monitor

# Webhook Alerting
WEBHOOK_ALERT_URL=https://your-webhook-endpoint.com/alerts
WEBHOOK_SECRET=your-webhook-secret

# Log Aggregation
LOG_AGGREGATION_ENABLED=true
LOG_RETENTION_DAYS=30
ENABLE_LOG_PARSING=true
LOG_PATTERNS_ENABLED=true
ENABLE_LOG_ALERTS=true

# Tracing Configuration
JAEGER_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_SERVICE_NAME=ai-ninja-monitoring
ENABLE_DISTRIBUTED_TRACING=true

# Health Checks
HEALTH_CHECK_INTERVAL=30000
ENABLE_DEEP_HEALTH_CHECKS=true
HEALTH_CHECK_TIMEOUT=10000
UNHEALTHY_THRESHOLD=3
RECOVERY_THRESHOLD=2

# Service Discovery
ENABLE_SERVICE_DISCOVERY=false
CONSUL_HOST=localhost
CONSUL_PORT=8500
SERVICE_DISCOVERY_INTERVAL=60000

# External Services Monitoring
PHONE_GATEWAY_URL=http://localhost:3001
REALTIME_PROCESSOR_URL=http://localhost:3002
CONVERSATION_ENGINE_URL=http://localhost:3003
PROFILE_ANALYTICS_URL=http://localhost:3004
USER_MANAGEMENT_URL=http://localhost:3005
SMART_WHITELIST_URL=http://localhost:3006
CONFIGURATION_SERVICE_URL=http://localhost:3007
STORAGE_SERVICE_URL=http://localhost:3008

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_RESPONSE_TIME_TRACKING=true
ENABLE_THROUGHPUT_MONITORING=true
ENABLE_ERROR_RATE_MONITORING=true
SLOW_REQUEST_THRESHOLD=5000

# Business Metrics
ENABLE_BUSINESS_METRICS=true
TRACK_CALL_VOLUME=true
TRACK_SUCCESS_RATES=true
TRACK_USER_SATISFACTION=true
TRACK_COST_METRICS=true

# Anomaly Detection
ENABLE_ANOMALY_DETECTION=true
ANOMALY_DETECTION_ALGORITHM=statistical
ANOMALY_THRESHOLD=2.5
ANOMALY_WINDOW_SIZE=100
ENABLE_ML_BASED_DETECTION=false

# Data Retention
METRICS_RETENTION_DAYS=90
LOGS_RETENTION_DAYS=30
TRACES_RETENTION_DAYS=7
ALERTS_RETENTION_DAYS=365

# Performance Configuration
ENABLE_METRICS_CACHING=true
METRICS_CACHE_TTL=300
ENABLE_BATCH_PROCESSING=true
BATCH_SIZE=1000
PROCESSING_INTERVAL=10000

# Security and Compliance
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=365
ENABLE_DATA_MASKING=true
PII_MASKING_ENABLED=true

# Development/Debug
DEBUG_MODE=false
DEBUG_METRICS_COLLECTION=false
DEBUG_ALERTING=false
ENABLE_MOCK_DATA=false
MOCK_DATA_INTERVAL=5000