# Configuration Service Environment Configuration

# Server Configuration
PORT=3007
HOST=0.0.0.0
NODE_ENV=development
SERVICE_NAME=configuration-service
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_ninja
DB_USERNAME=postgres
DB_PASSWORD=your-password
DB_SSL=false
DB_MAX_CONNECTIONS=15
DB_CONNECTION_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=6
REDIS_TTL=3600
REDIS_KEY_PREFIX=config_service

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=500

# Configuration Management
ENABLE_CONFIG_VERSIONING=true
ENABLE_CONFIG_VALIDATION=true
CONFIG_CHANGE_NOTIFICATIONS=true
ENABLE_CONFIG_ROLLBACK=true
MAX_CONFIG_VERSIONS=10

# Feature Flags
ENABLE_FEATURE_FLAGS=true
DEFAULT_FEATURE_STATE=false
FEATURE_FLAG_CACHE_TTL=300
ENABLE_GRADUAL_ROLLOUT=true
ROLLOUT_PERCENTAGE_STEP=10

# A/B Testing
ENABLE_AB_TESTING=true
MAX_ACTIVE_EXPERIMENTS=20
EXPERIMENT_DURATION_DAYS=30
MIN_SAMPLE_SIZE=1000
STATISTICAL_SIGNIFICANCE_THRESHOLD=0.95

# Configuration Sources
ENABLE_FILE_CONFIG=true
ENABLE_DATABASE_CONFIG=true
ENABLE_ENVIRONMENT_CONFIG=true
ENABLE_REMOTE_CONFIG=false
CONFIG_HIERARCHY=environment,database,file,default

# Change Management
ENABLE_CONFIG_APPROVAL=false
REQUIRE_APPROVAL_FOR_PRODUCTION=true
APPROVAL_TIMEOUT_HOURS=24
ENABLE_CONFIG_STAGING=true

# External Services
USER_MANAGEMENT_URL=http://localhost:3005
MONITORING_SERVICE_URL=http://localhost:3009

# Backup and Recovery
ENABLE_CONFIG_BACKUP=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
ENABLE_POINT_IN_TIME_RECOVERY=true

# Validation and Schema
ENABLE_SCHEMA_VALIDATION=true
SCHEMA_REGISTRY_ENABLED=false
CUSTOM_VALIDATORS_ENABLED=true
VALIDATION_MODE=strict

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL=1800
ENABLE_CONFIG_PRELOADING=true
CONFIG_POLLING_INTERVAL=30000

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_CONFIG_CHANGE_LOGGING=true
METRICS_ENABLED=true
METRICS_PORT=9095

# Development/Debug
DEBUG_MODE=false
DEBUG_CONFIG_LOADING=false
DEBUG_FEATURE_FLAGS=false
ENABLE_CONFIG_EXPORT=true